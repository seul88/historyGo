<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:textColor="#FFFFFF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="#FFFFFF"
            android:textSize="30dp"


            />


        <TextView
            android:id="@+id/tvPointsDemo"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_alignBottom="@+id/tvPoints"
            android:layout_toEndOf="@+id/tvYear"
            android:gravity="left|bottom"
            android:layout_marginLeft="15dp"
            android:text="points"
            android:textColor="#8D90BF"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="125dp"
            android:layout_height="67dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"

            android:padding="2dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="315dp"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvRating"
            android:padding="15dp"
            android:scrollbars="vertical"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvPoints"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="22dp"

            />


        <TextView
            android:id="@+id/tvYearDemo"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_alignBottom="@+id/tvPoints"
            android:layout_marginLeft="15dp"
            android:gravity="left|bottom"
            android:text="year"
            android:textColor="#8D90BF"
            android:textSize="16dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="139dp"
            android:layout_height="67dp"
            android:layout_below="@+id/tvName"
            android:layout_toEndOf="@+id/tvYearDemo"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:textStyle="italic" />


    </RelativeLayout>





</android.support.constraint.ConstraintLayout>